#include <stdio.h> 
 
  
// Prints average of a stream of numbers 
void streamAvg(float a[], int n) 
{ 
    float avg = 0; 
    for (int i = 0; i < n; i++) { 
        avg = ((avg * i) + a[i]) / (i + 1); 
        printf("Average of %d numbers is %.2f \n", i + 1, avg); 
    } 
    return; 
} 
  
